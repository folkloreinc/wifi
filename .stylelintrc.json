{
    "extends": [
        "stylelint-config-standard-scss",
        "stylelint-config-idiomatic-order",
        "stylelint-config-prettier"
    ],
    "rules": {
        "indentation": 4,
        "selector-class-pattern": [
            "^[a-z][a-z0-9A-Z]+$",
            {
                "message": "Selector should be written in camel-case (selector-class-pattern)"
            }
        ]
    },
    "ignoreFiles": ["**/*.js", "**/*.jsx"]
}
