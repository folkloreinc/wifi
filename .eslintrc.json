{
    "extends": ["airbnb", "prettier"],
    "parser": "@babel/eslint-parser",
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    },
    "rules": {
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "no-console": ["error", { "allow": ["warn", "error"] }]
    },
    "overrides": [
        {
            "files": [
                "*.config.js",
                "scripts/**/*.js",
                "scripts/**/*.mjs",
                "*/*/scripts/**/*.js",
                ".storybook/**/*.js",
                ".storybook/**/*.jsx",
                "**/*.config.js",
                "public/**/*.jsx"
            ],
            "rules": {
                "import/no-extraneous-dependencies": [
                    "error",
                    {
                        "devDependencies": true
                    }
                ],
                "global-require": 0,
                "import/no-dynamic-require": 0,
                "no-console": 0
            }
        },
        {
            "files": [
                "src/cli.js",
                "src/cli/**/*.js"
            ],
            "rules": {
                "global-require": 0,
                "import/no-dynamic-require": 0,
                "no-console": 0
            }
        }
    ]
}
